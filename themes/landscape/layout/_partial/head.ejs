<!DOCTYPE html>
<html lang="<%- config.language %>">
<head>
  <meta charset="utf-8">
  <style>#banner{position:absolute;top:0;left:0;width:100%;height:100%;background:url(<%- (config.cdn||config.url) + ((config.cdn||config.url).endsWith('/')?'':'/') %>images/banner.jpg)</style>
  <%- partial('google-analytics') %>
  <%
  var title = page.title;
  var og = open_graph({twitter_id: theme.twitter, google_plus: theme.google_plus, fb_admins: theme.fb_admins, fb_app_id: theme.fb_app_id}).replace(/-thumb/gi,'');
  if(page.hidden){og=og.replace(/<meta property="og:.*?time" content=".*?">/gi,'');}
  if(!og.includes('og:image')){var source=config.cdn||config.url;
  og+='<meta property="og:image" content="'+source+'/images/001.jpg"><meta property="og:image" content="'+source+'/images/002.jpg"><meta property="og:image" content="'+source+'/images/004.jpg"><meta property="twitter:image" content="'+source+'/images/004.jpg">';
  }
  if (is_archive()){
    title = __('archive_a');

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = __('category') + ': ' + page.category;
  } else if (is_tag()){
    title = __('tag') + ': ' + page.tag;
  }
  %>
  <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%- og %>
  <% if (theme.rss){ %>
    <link rel="alternate" href="<%= url_for(theme.rss) %>" title="<%= config.title %>" type="application/atom+xml">
  <% } %>
  <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
  <% } %>
  <% if (config.font_source_code_pro){ %>
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet" type="text/css">
  <% } %>
  <%- css('css/style') %>
</head>
